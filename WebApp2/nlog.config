<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      keepVariablesOnReload="true"
      internalLogLevel="info"
      internalLogFile="logs/temp/internal-nlog.txt">

  <targets>
    
    <!-- write logs to file  -->
    <target xsi:type="File"
            name="rollingFile"
            keepFileOpen="false"
            fileName="logs/${level}-${shortdate}.nlog"
            archiveFileName="logs/${level}-${shortdate}-{###}.nlog"
            layout="${longdate}|${event-properties:item=EventId.Id}|${uppercase:${level}}|${machinename}|${logger}|${message} ${exception}"
            archiveNumbering="Rolling"
            />
    
    <!-- write to the void aka just remove -->
    <target xsi:type="Null" name="blackhole" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Trace" writeTo="rollingFile" />

    <!--Skip Microsoft logs and so log only own logs-->
    <!--<logger name="Microsoft.*" minlevel="Trace" writeTo="blackhole" final="true" />
    <logger name="*" minlevel="Trace" writeTo="ownFile-web" />-->
  </rules>
</nlog>